extends ../index.pug

block container
    h2.container-home__title.margin-top-60px Thông tin cá nhân
    div.container-info-list
        div.container-info-list__left
            img(src="../assets/img/Trieu_Man.jpg", alt="").container-info-list__img
            a(href="").container-info-list__button-history Xem lịch sử
        div.container-info-list__right
            div.container-info-list__item-item
                div.container-info-list__header
                    div.container-info-list__item-name Họ và tên
                    i.fa-solid.fa-pen.container-info-list__icon
                input(type="text" class="container-info-list__item-value" id="name_user" placeholder="Nhập tên của bạn")
            div.container-info-list__item-item
                div.container-info-list__header.default
                    div.container-info-list__item-name Mã số sinh viên
                    input(type="text" class="container-info-list__item-value" id="student_id" readonly)
            div.container-info-list__item-item
                div.container-info-list__header
                    div.container-info-list__item-name Số điện thoại
                    i.fa-solid.fa-pen.container-info-list__icon
                input(type="text" class="container-info-list__item-value" id="phone" placeholder="Nhập số điện thoại")
            div.container-info-list__item-item
                div.container-info-list__header
                    div.container-info-list__item-name Email
                    i.fa-solid.fa-pen.container-info-list__icon
                input(type="text" class="container-info-list__item-value" id="email" placeholder="Nhập email")
            div.container-info-list__item-item
                div.container-info-list__header
                    div.container-info-list__item-name Số trang A4 đang có
                    i.item-buy-pager.fa-solid.fa-pen.container-info-list__icon
                input(type="text" class="container-info-list__item-value" id="number_pager" readonly)
            div.container-info-list__item-item
                div.container-info-list__header.default
                    div.container-info-list__item-name Ngày cập nhật thêm trang
                    input(type="text" class="container-info-list__item-value" id="date" readonly)
            div.container-info-list__item-item
                div.container-info-list__header.default
                    div.container-info-list__item-name Khoa
                    input(type="text" class="container-info-list__item-value" id="department" readonly)
            button.container-info-list__button-history.button-update-info Chỉnh sửa

    .modal-buy.js-modal-buy
      .modal-container-buy.js-modal-container-buy
        .modal-close.js-modal-close-buy
          i.fa-solid.fa-xmark
        header.modal-header
          p MUA THÊM GIẤY 
        .modal-body
            .modal-form
                label.modal-label-buy
                    // for chi tro den id
                    |Số lượng
                input#numberpage.modal-input(type='text' placeholder="VD: 1" )
                div.modal-label-buy-result
                    button#button-buy-pager
                        | Thanh toán
            
    script(src="../info_user/info_user.js")